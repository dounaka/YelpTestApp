<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RestoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#10444444"
        android:orientation="vertical"
        android:padding="@dimen/space_medium">

        <android.support.v7.widget.AppCompatEditText android:id="@+id/editSearchBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_business_hint" />

        <android.support.v7.widget.AppCompatEditText android:id="@+id/editSearchLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_location_hint" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewBusiness"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>
